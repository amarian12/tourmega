.small-12.large-4.columns.book-instant-container
  .book-instant-content
    #request.row.padding-bottom.light-grey-bg.book-instant-inner
      .small-12
        .small-12.columns.space-bottom.price
          .medium-8.large-7.columns
            .span.tour-price= "$ #{'%.2f' % @tour.price.to_f}"
          .medium-4.large-5.columns
            .span.tour-price-type{style: 'font-size: 16px; padding-top:5px;'}= "#{display_price_type(tour.price_type)}"
        .small-12.columns
          = link_to "Update", edit_tour_path(@tour), class: 'button expand ladda-button', 'data-style' => 'expand-right', 'data-color' => 'mint'
    .ratings-panel.row
      .ratings-wrapper
        = html_display_average_rating(@tour)
        %a.text-normal{:href => "#reviews"}
          = display_reviews_count(@tour)
      .box-social-wrapper
        .social-item.only
          %a.share-btn{:href => "javascript:void(0)"}
            %i.fa.fa-share-square-o
            %span
              = 'Social'
          %ul.social-dropdown
            %li
              %a{:href => "#"}
                %i.fa.fa-facebook-square
                Facebook
            %li
              %a{:href => "#",}
                %i.fa.fa-twitter
                Twitter
            %li
              %a{:href => "#"}
                %i.fa.fa-google-plus
                Google+
            %li
              %a{:href => "#"}
                %i.fa.fa-instagram
                Instagram
            %li
              %a{:href => "#"}
                %i.fa.fa-pinterest
                Pinterest

