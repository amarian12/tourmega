.small-12.large-4.columns.book-instant-container
  .book-instant-content
    #request.row.padding-bottom.light-grey-bg.book-instant-inner
      = simple_form_for(@reservation, url: new_tour_reservation_path(tour), method: :get, html: { class: 'passenger_reservation', id: '#passenger_reservation'}) do |f|
        .small-12
          .small-12.columns.space-bottom.price
            .medium-8.large-7.columns
              .span.tour-price= "$ #{@tour.price.round}"
            .medium-4.large-5.columns
              .span.tour-price-type{style: 'font-size: 16px; padding-top:5px;'}= "#{display_price_type(tour.price_type)}"
          .small-12.columns
            .medium-8.large-7.columns
              .row.collapse.dates
                = f.label 'Check in'
                .form-group
                  .input-group
                    .input-group-addon
                      %i.fa.fa-calendar
                    = f.text_field :start_at, class: 'form-control datepicker', placeholder: 'mm/dd/yyyy', value: session[:tours_start_date]
            .medium-4.large-5.columns
              .form-group.reservation_number_of_passengers
                %label.select.optional.control-label{:for => "reservation_number_of_passengers"} Passengers
                .input-group
                  %span.input-group-btn
                    %button.btn.btn-default.btn-number{"data-field" => "reservation[number_of_passengers]", "data-type" => "minus", :disabled => "disabled", :type => "button"}
                      %span.glyphicon.glyphicon-minus
                  %input#reservation_number_of_passengers.form-control.input-number{:max => "#{tour.max_quantity}", :min => "#{tour.min_quantity}", :name => "reservation[number_of_passengers]", :type => "text", :value => "#{tour.min_quantity}"}
                    %span.input-group-btn
                      %button.btn.btn-default.btn-number{"data-field" => "reservation[number_of_passengers]", "data-type" => "plus", :type => "button"}
                        %span.glyphicon.glyphicon-plus
          .small-12.columns
            = f.submit "Instant Book", class: 'button expand space-top instant-submit'
    .ratings-panel.row
      .ratings-wrapper
        = render 'shared/tour_rating', tour: tour
      .box-social-wrapper
        .social-item
          %a.share-btn{:href => "#"}
            %i.fa.fa-envelope-o
            %br/
            %span
              = 'Email'
        .social-item
          %a.share-btn{:href => "#"}
            %i.fa.fa-comments-o
            %br/
            %span
              = 'Messenger'
        .social-item
          %a.share-btn{:href => "javascript:void(0)"}
            %i.fa.fa-share-square-o
            %br/
            %span
              = 'Social'
          %ul.social-dropdown
            %li
              %a{:href => "#"}
                %i.fa.fa-facebook-square
                Facebook
            %li
              %a{:href => "#",}
                %i.fa.fa-twitter
                Twitter
            %li
              %a{:href => "#"}
                %i.fa.fa-google-plus
                Google+
            %li
              %a{:href => "#"}
                %i.fa.fa-instagram
                Instagram
            %li
              %a{:href => "#"}
                %i.fa.fa-pinterest
                Pinterest
